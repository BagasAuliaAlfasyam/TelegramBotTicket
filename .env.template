# ---- General ----
TIMEZONE=Asia/Jakarta
DEBUG=false

# ---- Telegram Bot Tokens ----
TELEGRAM_BOT_TOKEN_COLLECTING=your_collecting_bot_token
TELEGRAM_BOT_TOKEN_REPORTING=your_reporting_bot_token
TARGET_GROUP_COLLECTING=0
TARGET_GROUP_REPORTING=0
ADMIN_USER_IDS=

# ---- Google Sheets ----
GOOGLE_SERVICE_ACCOUNT_JSON=service_account.json
GOOGLE_SPREADSHEET_NAME=your_spreadsheet_name
GOOGLE_WORKSHEET_NAME=Logs

# ---- AWS S3 / MinIO ----
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET=telegram-media
AWS_S3_REGION=ap-southeast-1
AWS_S3_ENDPOINT=http://minio:9000
AWS_S3_PUBLIC_BASE_URL=http://localhost:9000/telegram-media
S3_MEDIA_PREFIX=tech-media

# ---- MLflow ----
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=ticket-classifier
MLFLOW_MODEL_NAME=ticket-classifier
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_BUCKET_NAME=mlflow-artifacts
MLFLOW_TRACKING_USERNAME=
MLFLOW_TRACKING_PASSWORD=

# ---- ML Thresholds (2-tier: AUTO >= 0.75, REVIEW < 0.75) ----
ML_THRESHOLD_AUTO=0.75

# ---- Gemini API (Knowledge Distillation Cascade) ----
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_ENABLED=true
GEMINI_MODEL_NAME=gemini-2.0-flash
GEMINI_CASCADE_THRESHOLD=0.75

# ---- Service Ports (host mapping) ----
PREDICTION_API_PORT=8001
DATA_API_PORT=8002
TRAINING_API_PORT=8005
MLFLOW_PORT=5000
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ---- Internal Service URLs (used by bots) ----
PREDICTION_API_URL=http://prediction-api:8001
DATA_API_URL=http://data-api:8002
TRAINING_API_URL=http://training-api:8005
